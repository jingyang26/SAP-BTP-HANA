<?xml version="1.0" encoding="UTF-8" ?>
<mvc:View
    controllerName="project1.controller.dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f">
    
    <Page showHeader="true" title="AKMAJU Quality Inspection Dashboard">
        <!-- KPI Section -->
        <layout:Grid defaultSpan="XL3 L3 M6 S12" class="sapUiSmallMargin">
            <layout:content>
                <GenericTile 
                    header="Pending Inspections"
                    subheader="Awaiting Action"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent>
                        <NumericContent 
                            value="{dashboard>/stats/pending}"
                            valueColor="Critical"/>
                    </TileContent>
                </GenericTile>

                <GenericTile 
                    header="Pass Rate"
                    subheader="Overall"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent>
                        <NumericContent 
                            value="{dashboard>/stats/passRate}"
                            valueColor="Good"
                            scale="%"/>
                    </TileContent>
                </GenericTile>

                <GenericTile 
                    header="Failed Items"
                    subheader="Requires Action"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent>
                        <NumericContent 
                            value="{dashboard>/stats/failed}"
                            valueColor="Error"/>
                    </TileContent>
                </GenericTile>

                <GenericTile 
                    header="In Progress"
                    subheader="Active Inspections"
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop">
                    <TileContent>
                        <NumericContent 
                            value="{dashboard>/stats/inProgress}"
                            valueColor="Neutral"/>
                    </TileContent>
                </GenericTile>
            </layout:content>
        </layout:Grid>

        <!-- Inspection Table Section -->
        <Panel class="sapUiSmallMargin">
            <headerToolbar>
                <Toolbar>
                    <Title text="Quality Inspections"/>
                    <ToolbarSpacer/>
                    <SearchField 
                        width="20rem" 
                        placeholder="Search by ID, Batch, or Material"
                        search=".onSearch"/>
                    <Button 
                        icon="sap-icon://add" 
                        text="New Inspection" 
                        type="Emphasized" 
                        press=".onNewInspection"/>
                </Toolbar>
            </headerToolbar>

            <Table
                id="inspectionTable"
                items="{dashboard>/inspections}"
                mode="SingleSelect"
                sticky="HeaderToolbar,ColumnHeaders">
                <columns>
                    <Column>
                        <Text text="Delivery ID"/>
                    </Column>
                    <Column>
                        <Text text="Batch Number"/>
                    </Column>
                    <Column>
                        <Text text="Material"/>
                    </Column>
                    <Column>
                        <Text text="Status"/>
                    </Column>
                    <Column>
                        <Text text="Inspector"/>
                    </Column>
                    <Column>
                        <Text text="Quantity"/>
                    </Column>
                    <Column>
                        <Text text="Date"/>
                    </Column>
                    <Column>
                        <Text text="Actions"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier
                                title="{dashboard>deliveryId}"
                                text="{dashboard>type}"/>
                            <Text text="{dashboard>batchNumber}"/>
                            <Text text="{dashboard>material}"/>
                            <ObjectStatus
                                text="{dashboard>status}"
                                state="{= ${dashboard>status} === 'Pass' ? 'Success' : 
                                       ${dashboard>status} === 'Fail' ? 'Error' :
                                       ${dashboard>status} === 'In Progress' ? 'Warning' : 'None' }"/>
                            <Text text="{dashboard>inspector}"/>
                            <ObjectNumber
                                number="{dashboard>quantity}"
                                unit="{dashboard>unit}"/>
                            <Text text="{
                                path: 'dashboard>date',
                                formatter: '.formatter.formatDate'
                            }"/>
                            <HBox>
                                <Button 
                                    icon="sap-icon://inspect" 
                                    text="Start" 
                                    type="Transparent"
                                    press=".onStartInspection"
                                    visible="{= ${dashboard>status} === 'Pending' }"/>
                                <Button 
                                    icon="sap-icon://complete" 
                                    text="Record" 
                                    type="Transparent"
                                    press=".onRecordResults"
                                    visible="{= ${dashboard>status} === 'In Progress' }"/>
                                <Button 
                                    icon="sap-icon://document" 
                                    text="Report" 
                                    type="Transparent"
                                    press=".onViewReport"
                                    visible="{= ${dashboard>status} === 'Pass' || ${dashboard>status} === 'Fail' }"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>

        <!-- Failed Items Panel -->
        <Panel 
            headerText="Failed Items - Action Required" 
            class="sapUiSmallMargin"
            expandable="true"
            expanded="true">
            <Table
                items="{dashboard>/failedItems}"
                mode="SingleSelect">
                <columns>
                    <Column>
                        <Text text="Item ID"/>
                    </Column>
                    <Column>
                        <Text text="Batch Number"/>
                    </Column>
                    <Column>
                        <Text text="Failure Reason"/>
                    </Column>
                    <Column>
                        <Text text="Action"/>
                    </Column>
                    <Column>
                        <Text text="Priority"/>
                    </Column>
                    <Column>
                        <Text text="Status"/>
                    </Column>
                    <Column>
                        <Text text="Quantity"/>
                    </Column>
                    <Column>
                        <Text text="Actions"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{dashboard>itemId}"/>
                            <Text text="{dashboard>batchNumber}"/>
                            <Text text="{dashboard>failureReason}"/>
                            <Text text="{dashboard>action}"/>
                            <ObjectStatus
                                text="{dashboard>priority}"
                                state="{= ${dashboard>priority} === 'High' ? 'Error' : 
                                       ${dashboard>priority} === 'Medium' ? 'Warning' : 'Success' }"/>
                            <Text text="{dashboard>status}"/>
                            <ObjectNumber
                                number="{dashboard>affectedQuantity}"
                                unit="units"/>
                            <Button 
                                text="Process" 
                                type="Emphasized" 
                                press=".onProcessFailedItem"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </Page>
</mvc:View>